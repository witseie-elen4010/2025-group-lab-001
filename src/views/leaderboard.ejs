<!DOCTYPE html>
<html lang="en">
<style>
    @font-face {
      font-family: 'body';
      src: url('/fonts/body.ttf') format('truetype');
      font-weight: normal;
      font-style: normal;
      font-display: swap;
    }
    
    @font-face {
      font-family: 'heading';
      src: url('/fonts/heading.ttf') format('truetype');
      font-weight: normal;
      font-style: normal;
      font-display: swap;
    }
    
    body {
      font-family: 'body';
      background-color: #97EAF4;
      text-align: center;
      padding: 20px;
    }
    
    h1, h2, h3, h4, h5, h6 {
      font-family: 'heading';
      margin-bottom: 20px;
      margin-top: 10px;
    }

    table {
      margin: 0 auto;
      width: 80%;
      border-collapse: collapse;
      margin-bottom: 30px;
      border: none;
      border-collapse: collapse;
    }

    th, td {
      padding: 10px;
      border: 1px solid #333;
      text-align: center;
      border: none;
      border-collapse: collapse;
    }

    th {
      background-color: #57B8C5;
      font-family: 'heading';
    }

    tr:nth-child(even) {
      background-color: #b8e8ef;
    }

    tr:nth-child(odd) {
      background-color: #d5f3f7;
    }

    .button-container {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 20px;
    }
    
    button {
      background-image: url('/assets/button 1.png');
      background-size: 100% 100%; /* Cover the entire button */
      background-repeat: no-repeat;
      background-color: transparent; /* Remove default background */
      border: none; /* Remove default border */
      font-family: 'heading';
      font-size: 1em;
      color: #000; /* Text color - adjust if needed */
      cursor: pointer;
      text-align: bottom;
      min-width: 120px; /* Set a minimum width for the button */
      min-height: 40px; /* Set a minimum height for the button */
      margin-top: 0px; /* Add space above the button to move it down */
      vertical-align: middle; /* Changed from middle to bottom alignment */
      position: relative; /* Enable fine positioning */
      top: 20px; /* Move button down slightly relative to its normal position */
      margin-bottom: 20px;
      margin-top: 10px;
    }
    
    /* Optional: Add hover and active effects */
    button:hover {
      transform: scale(1.05);
    }
    
    button:active {
      transform: scale(0.95);
    }
</style>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Leaderboard</title>
</head>
<body>
  <h1>Leaderboard</h1>

  <!-- Display the winner -->
  <h2>Winner: 
    <% if (typeof winner === 'string') { %>
      <%= winner %>
    <% } else if (winner && typeof winner.getId === 'function') { %>
      <%= winner.getId() %>
    <% } else { %>
      No winner yet
    <% } %>
  </h2>

  <table>
    <thead>
      <tr>
        <th>Rank</th>
        <th>Player ID</th>
        <th>Points</th>
      </tr>
    </thead>
    <tbody>
      <% leaderboard.forEach((entry, index) => { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= entry.playerId %></td>
        <td><%= entry.points %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- Buttons for navigation -->
  <div class="button-container">
    <!-- Button to return home -->
    <button onclick="window.location.href='/home'">Return to Home</button>
    
    <% if (!roundsCompleted) { %>
    <button onclick="window.location.href='/gaming/waiting'">Start Next Round</button>
    <% } %>
  </div>
</body>
</html>
